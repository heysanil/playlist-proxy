{
    "name": "playlist-proxy",
    "version": "1.0.1",
    "type": "module",
    "private": true,
    "bin": {
        "playlist-proxy": "./src/index.ts"
    },
    "scripts": {
        "dev": "bun run src/index.ts serve --verbose",
        "start": "bun run src/index.ts serve",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "check": "biome check --write . && tsc --noEmit",
        "prepare": "lefthook install",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "changeset publish"
    },
    "dependencies": {
        "picocolors": "^1.1.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@changesets/cli": "^2.27.10",
        "@types/bun": "latest",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "lefthook": "^1.8.4",
        "typescript": "^5.0.0"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
